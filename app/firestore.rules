rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Coleção users: cada usuário só edita seu próprio documento
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Bolões: leitura autenticada; criar qualquer um; atualizar/excluir apenas o dono
    match /pools/{poolId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // Palpites: leitura autenticada; criar/atualizar/excluir apenas o próprio palpite
    match /predictions/{predictionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Resultados: leitura autenticada; escrita por qualquer auth (sync da API roda em todos os clientes)
    match /config/matchResults {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
